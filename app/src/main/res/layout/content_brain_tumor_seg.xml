<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_brain_tumor_seg"
    tools:context="edu.exa.unicen.dicomseg.activities.BrainTumorSegActivity">

    <TextView android:id="@+id/textInfoBrainTumor"
        android:text="@string/label_activity_brain_tumor_seg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/select_segmentation_title_margin_bottom"
        android:textStyle="bold" />

    <Button android:id="@+id/brainTumorNecrosis"
        android:text="@string/button_brainTumorNecrosis"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/select_segmentation_button_margin_bottom"
        android:layout_below="@+id/textInfoBrainTumor"
        android:background="@drawable/buttons"/>

    <Button android:id="@+id/brainTumorBorder"
        android:text="@string/button_brainTumorBorder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/select_segmentation_button_margin_bottom"
        android:layout_below="@+id/brainTumorNecrosis"
        android:background="@drawable/buttons"/>

</RelativeLayout>
